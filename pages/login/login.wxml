<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/GitHub.png"></image>
  </view>
  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../images/name.png"></image>
      <label class="loginLab">Username</label>
      <input class="inputText" placeholder="" bindinput="phoneInput" />
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../images/key.png"></image>
      <label class="loginLab">Password</label>
      <input class="inputText" password="true" placeholder="" bindinput="passwordInput" />
    </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">Login</button>
    </view>
  </view>
</view>